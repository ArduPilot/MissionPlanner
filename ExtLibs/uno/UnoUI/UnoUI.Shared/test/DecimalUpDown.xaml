<UserControl x:Class="Custom.DecimalUpDown"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="78" Height="32" RenderTransformOrigin="0.5,0.5" >
        <Grid.RenderTransform>
            <CompositeTransform ScaleX="0.7" ScaleY="0.7" TranslateX="0" TranslateY="0"/>
        </Grid.RenderTransform>

        <TextBox  x:Name="numbertextBox"  Text="0.00" Width="40" HorizontalAlignment="Left" />
        <Button x:Name="button" Content="UP" Margin="64,0,0,16" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" >
            <Button.RenderTransform>
                <CompositeTransform ScaleX="1" ScaleY="1"/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button1" Content="Down" Margin="64,16,0,0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

    </Grid>
</UserControl>